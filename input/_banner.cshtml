@{
  string bannerStyle = "";
  var image = Document.GetString(WebKeys.Image, string.Empty);
  if (!string.IsNullOrEmpty(image))
  {
    bannerStyle = $"background: url(\"{Context.GetLink(image)}\")";
  }
}
<section id="banner" style="@bannerStyle">
    <header>
        <h2>@Document.GetString("Banner-heading", "Howdy. This is Dopetrope.")</h2>
        <p>@Document.GetString("Banner-description", "A responsive template by HTML5 UP")</p>
    </header>
</section>